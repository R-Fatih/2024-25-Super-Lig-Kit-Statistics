@using _2024_25_Süper_Lig_Kit.Dto.MatchDtos
@model List<ResultMatchDto>
@{
    ViewData["Title"] = "Index";
}

<table class="table table-striped table-wrap">
    <thead>
        <tr>
            <th>Id</th>
            <th>Teams</th>
            <th>Hakem</th>
            <th>Skor</th>
            <th>Formalar</th>
            <th>Hafta</th>
            <th>Tarih</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MatchId</td>
                <td>
                    <img width="30" height="30" src="@item.HomeTeam.Logo"/>
                    <img width="30" height="30" src="@item.AwayTeam.Logo"/>

                </td>
                <td>
                    <img width="30" height="30" src="@item.Referee.ImgUrl"/>
                    <a>@item.Referee.RefereeName</a>
                </td>
                <td>
                    @item.HomeMS-@item.AwayMS
                </td>
                <td>
                    <img width="50" height="50" src="@item.HomeTeamJerseyImageGK.ImgPath" />
                    <img width="50" height="50" src="@item.HomeTeamJerseyImage.ImgPath" />
                    <img width="50" height="50" src="@item.RefereeJerseyImage.ImgPath" />
                    <img width="50" height="50" src="@item.AwayTeamJerseyImage.ImgPath" />
                    <img width="50" height="50" src="@item.AwayTeamJerseyImageGK.ImgPath" />

                </td>
                <td>
					@item.Week
                    </td>
                    <td>
                        @item.Date.Value.ToLongDateString()
                        </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Match/Create" class="btn btn-success">Create New Match</a>

